<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/paper"
    android:paddingLeft="6dip"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="6dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="6dip" >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingBottom="6dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="6dip" >

        <ImageButton
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="0dip"
            android:layout_marginRight="6dp"
            android:src="@drawable/maps"
            android:longClickable="false"
            android:layout_gravity="center"
                />

        <ImageButton
            android:id="@+id/phoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="0dip"
            android:layout_marginRight="6dp"
            android:src="@drawable/phone"
            android:layout_gravity="center"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageButtonWeb"
                android:layout_marginRight="6dp"
                android:text="景點照片"
                android:background="@drawable/botton_small"
                android:textColor="@color/white"
                />

        <ImageButton
                android:id="@+id/favorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:adjustViewBounds="true"
                android:src="@drawable/star"
                android:padding="0dp"
                android:layout_gravity="center"
                />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/listTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/brown_deep"
                android:textSize="20sp" >
            </TextView>



            <TextView
                android:id="@+id/listTextView1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/listTextView1"
                android:text="sssss"
                android:textColor="@color/brown"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/listTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="@color/brown_deep"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/listTextView2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/listTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textColor="@color/brown_deep"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/listTextView3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/listTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telephone"
            android:textColor="@color/brown_deep"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/listTextView4_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/listTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content"
            android:textColor="@color/brown_deep"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/listTextView5_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown"
            android:textSize="18sp" >
        </TextView>
    </LinearLayout>

</ScrollView>